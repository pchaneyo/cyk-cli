    <object name="numbers">
        <number>150</number>
        <number>50</number>
    </object>
    <call object="numbers" method="push">
        <number>10</number>
    </call>
    <number name="total">0</number>
    <call object="numbers" method="foreach">
        <function>
            <number name="n"/>
            <block>
                <print>"sum " + n</print>
                <let name="total">total + n</let>
            </block>
        </function>
    </call>
    <print>"sum = "+total</print>
    <object name="double" />
